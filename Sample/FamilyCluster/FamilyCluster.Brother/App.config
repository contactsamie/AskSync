<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="akka" type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
  </configSections>
  <appSettings>
    <add key="client" value="akka.tcp://SisterSystem@localhost:10000/user/SisterEchoActor" />
  </appSettings>
  <akka>
    <hocon>
      <![CDATA[			
					    akka {  
						            actor {             
                                        serializers {
                                            wire = "Akka.Serialization.WireSerializer, Akka.Serialization.Wire"
                                              }  
                  
                                        serialization-bindings {
                                            "System.Object" = wire
                                              }
                 
							                    provider = "Akka.Remote.RemoteActorRefProvider, Akka.Remote"
    
                                debug {  
                                    receive = on 
                                    autoreceive = on
                                    lifecycle = on
                                    event-stream = on
                                    unhandled = on
                                }
						            }
                    remote {
                     log-remote-lifecycle-events = DEBUG
                        helios.tcp {
		                    port = 20000
		                    hostname = localhost  
                        }
                    }
                }
			]]>
    </hocon>
  </akka>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
</configuration>